package mvcdemo.servlets;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/**
 * Servlet implementation class Controller
 */
public class Controller extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
   
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		processRequest(request,response);
	}
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		processRequest(request,response);
	}
	private void processRequest(HttpServletRequest request,	HttpServletResponse response) {
		
		String handlerName=request.getParameter("handler");
		
		if("login.jsp".equals(handlerName)){
			
			loginForward(request,response);
		}
		else if("validateLogin".equals(handlerName)){
			
			LoginHandler lh=new LoginHandler(request);
			if(lh.validate()==null){
				
				loginForward(request,response);
			}
			else{
				
				homeForward(request,response);
			}
		}
	}
	private void homeForward(HttpServletRequest request,
			HttpServletResponse response) {
		
		response.sendRedirect("home.jsp");
	}
	private void loginForward(HttpServletRequest request,
			HttpServletResponse response) {
		
				
	}

}

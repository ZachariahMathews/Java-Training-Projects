<body>
${param.uid }<br>
${param.pwd}<br>
<c:set var="name" value="<%=new java.util.Date() %>"/>
${name }<br>

<!-- IF STATEMENT -->
<c:if test="${param.role=='admin'}">
admin<br>
</c:if>

<!-- WHEN STATEMENT -->
<c:choose>
	<c:when test="${param.role=='admin' }">
		You are admin<br>
	</c:when>
	<c:when test="${param.role=='HR' }">
		You are HR<br>
	</c:when>
	<c:otherwise>
		Who are you?<br>
	</c:otherwise>
</c:choose>

<!-- FOR TOKEN STATEMENT -->
<c:forTokens var="day" items="mon,tue,wed,thur,fri,sat,sun" delims=",">
${day }<br>
</c:forTokens>

<!-- FOR EACH STATEMENT -->
<c:forEach var="p" items="<%=new jstlDemo.utils.MyUtil().list() %>">
	${p.name},${p.salary}<br>
</c:forEach>

<c:forEach var="p" items="${requestScope.list}"></c:forEach>

